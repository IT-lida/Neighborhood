@import "/styles/iconfont.wxss";

.search_box {
  width: 100%;
  height: 100%;
  padding: 20rpx;
}

.search_wrap {
  display: flex;
  width: 100%;
}

.search_wrap .search_text {
  flex: 1;
  color: #9A9C99;
  font-size: 32rpx;
  padding: 5rpx 0 0 10rpx;
  vertical-align: top;
}

.hotTopic {
  width: 100%;
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin: 40rpx 0;
}

.hot_wrap {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.hot_wrap .hot_text {
  padding: 10rpx 20rpx;
  margin: 0 20rpx 20rpx 0;
  background-color: #f1f1f1;
  font-size: 24rpx;
  color: #555;
  border-radius: 8rpx;
}