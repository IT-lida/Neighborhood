.main {
  width: 100%;
  height: 100%;
  padding: 14rpx;
}

.input_word {
  width: 100%;
  min-height: 100px;
  padding-top: 30px;
}

.input_word input {
  width: 80%;
  display: flex;
  flex-wrap: wrap;
}

.upload_button {
  position: absolute;
  top: 10px;
  right: 10px;
}

.img_box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap
}
.img {
  width: 100px;
  height: 100px;
  margin: 5px 0 0 5px;
  position: relative;
}
.img image {
  width: 100%;
  height: 100%;
}
.delete_btn {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 30px;
  font-size: 12px;
  color: #fff;
  background: rgba(0, 0, 0, .5);
  text-align: center;
  line-height: 30px;
}
.upload_img_btn {
  width: 100px;
  height: 100px;
  margin: 5px;
  text-align: center;
  line-height: 100px;
  background-color: #B2AFAF;
}

.upload_img {
  margin-top: 25px;
  width: 50px;
  height: 50px;
}